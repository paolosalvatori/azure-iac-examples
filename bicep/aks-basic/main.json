  "outputs": {
    "aksClusterName": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Resources/deployments', 'aksDeploy'), '2019-10-01').outputs.aksClusterName.value]"
    },
    "aksClusterFqdn": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Resources/deployments', 'aksDeploy'), '2019-10-01').outputs.aksControlPlaneFQDN.value]"
    },
    "aksClusterApiServerUri": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Resources/deployments', 'aksDeploy'), '2019-10-01').outputs.aksApiServerUri.value]"
    }
  }
}