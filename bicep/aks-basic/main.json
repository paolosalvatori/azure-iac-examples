            "_generator": {
              "name": "bicep",
              "version": "0.4.613.9944",
              "templateHash": "9462074936930149607"
            }
          },
          "parameters": {
            "location": {
              "type": "string"
            },
            "prefix": {
              "type": "string"
            },
            "tags": {
              "type": "object"
            },
            "retentionInDays": {
              "type": "int",
              "defaultValue": 30
            },
